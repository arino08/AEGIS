{
    "name": "aegis",
    "version": "1.0.0",
    "description": "AEGIS - Intelligent API Gateway with Rate Limiting & Observability",
    "main": "dist/index.js",
    "type": "module",
    "scripts": {
        "dev": "node --import tsx --watch src/index.ts",
        "build": "tsc",
        "start": "node dist/index.js",
        "lint": "eslint src/**/*.ts",
        "lint:fix": "eslint src/**/*.ts --fix",
        "format": "prettier --write \"src/**/*.ts\"",
        "format:check": "prettier --check \"src/**/*.ts\"",
        "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
        "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
        "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
        "test:echo": "node --import tsx tests/echo-server.ts",
        "test:echo:api": "cross-env SERVICE_NAME=api-service ECHO_PORT=3000 node --import tsx tests/echo-server.ts",
        "test:echo:auth": "cross-env SERVICE_NAME=auth-service ECHO_PORT=3001 node --import tsx tests/echo-server.ts",
        "test:echo:users": "cross-env SERVICE_NAME=users-service ECHO_PORT=3002 node --import tsx tests/echo-server.ts",
        "test:server": "node --import tsx scripts/test-server.ts",
        "stress:quick": "./scripts/stress-test.sh --quick",
        "stress:standard": "./scripts/stress-test.sh --standard",
        "stress:heavy": "./scripts/stress-test.sh --heavy",
        "demo": "./scripts/stress-test.sh --demo",
        "db:migrate": "ts-node --esm src/storage/migrations/run.ts",
        "db:migrate:status": "ts-node --esm src/storage/migrations/run.ts status",
        "db:migrate:create": "ts-node --esm src/storage/migrations/run.ts create",
        "typecheck": "tsc --noEmit",
        "docker:up": "docker compose -f docker/docker-compose.yml up -d",
        "docker:down": "docker compose -f docker/docker-compose.yml down",
        "docker:logs": "docker compose -f docker/docker-compose.yml logs -f",
        "docker:up:all": "docker compose -f docker/docker-compose.yml --profile dev-tools --profile mock-backends up -d",
        "clean": "rm -rf dist coverage node_modules/.cache",
        "prepare": "npm run build"
    },
    "keywords": [
        "api-gateway",
        "rate-limiting",
        "observability",
        "proxy",
        "monitoring",
        "microservices",
        "load-balancer"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "@types/minimatch": "^5.1.2",
        "chokidar": "^3.6.0",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "cross-env": "^7.0.3",
        "dotenv": "^16.4.5",
        "express": "^4.21.0",
        "helmet": "^8.0.0",
        "http-proxy": "^1.18.1",
        "http-proxy-middleware": "^3.0.3",
        "jose": "^6.1.3",
        "minimatch": "^10.1.1",
        "openai": "^4.70.0",
        "pg": "^8.13.0",
        "pg-promise": "^11.10.0",
        "redis": "^4.7.0",
        "uuid": "^10.0.0",
        "winston": "^3.15.0",
        "ws": "^8.18.3",
        "yaml": "^2.6.0",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@eslint/js": "^9.13.0",
        "@types/compression": "^1.7.5",
        "@types/cors": "^2.8.17",
        "@types/express": "^5.0.0",
        "@types/http-proxy": "^1.17.15",
        "@types/jest": "^29.5.14",
        "@types/node": "^22.8.1",
        "@types/pg": "^8.11.10",
        "@types/uuid": "^10.0.0",
        "@types/ws": "^8.18.1",
        "eslint": "^9.13.0",
        "eslint-config-prettier": "^9.1.0",
        "globals": "^15.11.0",
        "jest": "^29.7.0",
        "prettier": "^3.3.3",
        "ts-jest": "^29.2.5",
        "ts-node": "^10.9.2",
        "tsx": "^4.19.0",
        "typescript": "^5.6.3",
        "typescript-eslint": "^8.11.0"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}
