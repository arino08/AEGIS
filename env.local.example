# =============================================================================
# AEGIS Dashboard - Environment Configuration
# =============================================================================
# Copy this file to .env.local and update the values for your environment.
# Do NOT commit .env.local to version control.

# =============================================================================
# API Configuration
# =============================================================================

# Base URL for the AEGIS Gateway API
# Default: http://localhost:8080
NEXT_PUBLIC_API_URL=http://localhost:8080

# WebSocket URL for real-time metrics
# Default: ws://localhost:8080/ws/metrics
NEXT_PUBLIC_WS_URL=ws://localhost:8080/ws/metrics

# =============================================================================
# Feature Flags
# =============================================================================

# Enable real-time WebSocket updates
# Default: true
NEXT_PUBLIC_ENABLE_REALTIME=true

# Enable debug mode (shows additional logging)
# Default: false
NEXT_PUBLIC_DEBUG=false

# =============================================================================
# UI Configuration
# =============================================================================

# Default theme (light, dark, system)
# Default: system
NEXT_PUBLIC_DEFAULT_THEME=system

# Default time range for charts (1h, 6h, 24h, 7d, 30d)
# Default: 1h
NEXT_PUBLIC_DEFAULT_TIME_RANGE=1h

# Auto-refresh interval in milliseconds (minimum: 5000)
# Default: 30000 (30 seconds)
NEXT_PUBLIC_REFRESH_INTERVAL=30000
