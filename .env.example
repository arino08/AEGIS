# =============================================================================
# AEGIS - Intelligent API Gateway Configuration
# =============================================================================
# Copy this file to .env and adjust values for your environment

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
NODE_ENV=development
PORT=8080
HOST=0.0.0.0

# -----------------------------------------------------------------------------
# PostgreSQL Database
# -----------------------------------------------------------------------------
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=aegis
POSTGRES_USER=aegis_user
POSTGRES_PASSWORD=dev_password
POSTGRES_SSL=false
POSTGRES_POOL_MIN=2
POSTGRES_POOL_MAX=10

# -----------------------------------------------------------------------------
# Redis Cache
# -----------------------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TLS=false

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_ENABLED=false
LOG_FILE_PATH=./logs/aegis.log

# -----------------------------------------------------------------------------
# Rate Limiting Defaults
# -----------------------------------------------------------------------------
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT_RPM=100
RATE_LIMIT_WINDOW_MS=60000

# -----------------------------------------------------------------------------
# Proxy Settings
# -----------------------------------------------------------------------------
PROXY_TIMEOUT_MS=30000
PROXY_RETRY_ATTEMPTS=3
PROXY_RETRY_DELAY_MS=1000

# -----------------------------------------------------------------------------
# Metrics & Monitoring
# -----------------------------------------------------------------------------
METRICS_ENABLED=true
METRICS_FLUSH_INTERVAL_MS=10000

# -----------------------------------------------------------------------------
# Config File
# -----------------------------------------------------------------------------
CONFIG_FILE_PATH=./config/aegis.config.yaml
CONFIG_HOT_RELOAD=true
